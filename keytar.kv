#:kivy 1.0

<BackgroundTile>:
    bcolor: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: self.bcolor
        Rectangle:
            pos: self.pos
            size: self.size

<GameScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            # bcolor: 1,1,1,0
            orientation: 'horizontal'
            size_hint_y: 0.0625
            Label:
                id: time
                text: '0:00'
                font_size: dp(16)
                text_size: 380, None
                halign: 'left'
            Label:
                id: level
                text: '20'
                font_size: dp(16)
                text_size: 380, None
                halign: 'right'
        GridLayout:
            id: grid
            rows: 4
            cols: 4

<StartScreen>:
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        pos_hint: {'center_y':0.5}
        height: dp(90)
        Label:
            text: 'keytar'
            font_size: dp(26)
            size_hint_y: None
            height: dp(30)
        Label:
            text: 'by brad'
            font_size: dp(13)
            size_hint_y: None
            height: dp(30)
        Label:
            text: 'press \'r\' or \'spacebar\' to start'
            font_size: dp(16)
            size_hint_y: None
            height: dp(30)

<WinScreen>:
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        pos_hint: {'center_y':0.25}
        height: dp(90)
        Label:
            text: 'you win !'
            font_size: dp(26)
            size_hint_y: None
            height: dp(30)
        Label:
            id: time
            text: 'time: 0.00'
            font_size: dp(13)
            size_hint_y: None
            height: dp(30)
        Label:
            text: 'press \'r\' or \'spacebar\' to start'
            font_size: dp(16)
            size_hint_y: None
            height: dp(30)
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: dp(180)
            Label:
                text: '~ leaderboard ~'
                font_size: dp(15)
                size_hint_y: None
                height: dp(40)
            Label:
                id: l1
                text: ''
                font_size: dp(13)
                size_hint_y: None
                height: dp(18)
            Label:
                id: l2
                text: ''
                font_size: dp(13)
                size_hint_y: None
                height: dp(18)
            Label:
                id: l3
                text: ''
                font_size: dp(13)
                size_hint_y: None
                height: dp(18)
            Label:
                id: l4
                text: ''
                font_size: dp(13)
                size_hint_y: None
                height: dp(18)
            Label:
                id: l5
                text: ''
                font_size: dp(13)
                size_hint_y: None
                height: dp(18)

<LoseScreen>:
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        pos_hint: {'center_y':0.5}
        height: dp(90)
        Label:
            text: 'you lost :('
            font_size: dp(26)
            size_hint_y: None
            height: dp(30)
        Label:
            id: level
            text: 'level: 0'
            font_size: dp(13)
            size_hint_y: None
            height: dp(30)
        Label:
            text: 'press \'r\' or \'spacebar\' to start'
            font_size: dp(16)
            size_hint_y: None
            height: dp(30)
